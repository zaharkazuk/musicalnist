<html>
	<head>
	<title>Музичні інструменти</title>
		</head>
	<body>
		<script>
			let musicalinst = {
			violin: "Струнный / Известные музыканты - Никколо Паганини, Антонио Вивальди",
			guitar: "Струнный / Известные музыканты - Джими Хендрикс, Эрик Клэптон, Роберт Джонсон",
			drum: "Ударный / Известные музыканты - Джон Бонэм, Кит Мун, Чарли Уоттс"}
			let instrument = prompt("Введите музыкальный инструмент")
			if (instrument == "Скрипка") {alert(musicalinst.violin);}
			else if (instrument == "Гитара") {alert(musicalinst.guitar);}
			else if (instrument == "Барабан") {alert(musicalinst.drum);}
			</script>
		</body>
	</html>
 
